--Cameras---------------------------------------------------

frontCam = Camera {
    position -> vec3(0.0, 0.5, -0.5)
    pointing -> vec3(0.0, 0.0, 0.0)
}

topCam = Camera {
    position -> vec3(0.0, 1.0, 0.0)
    pointing -> vec3(0.0, 0.0, 0.0)
}

--Lights----------------------------------------------------

redLight = Light {
    position -> vec3(1.0, 1.0, 1.0)
    color    -> rgb(1.0, 0.9, 0.8)
}

blueLight = Light {
    position -> vec3(-1.0, -1.0, -1.0)
    color    -> rgb(0.8, 0.9, 1.0)
}

--Objects---------------------------------------------------

box1 = Box {
    corner1 -> vec3(-0.2, 0.0, -0.2)
    corner2 -> vec3(0.2, 0.4, 0.2)
    color   -> rgb(0.5, 0.5, 0.5)
}

sphere1 = Sphere {
    origin -> vec3(0.0, 0.4, 0.0)
    radius -> 0.2
}

tub = box1 - sphere1

plane1 = Plane {
    normal   -> vec3(0.0, 1.0, 0.0)
    position -> vec3(0.0, 0.0, 0.0)
}

numberBoxes = 5

--Macros----------------------------------------------------

myMacro = Macro () {
    i = 0
    While (i < numberBoxes) {
        box1 <translate vec3(i*5.0, 0.0, 0.0)>
    }
}

--Config----------------------------------------------------

Config {
    title      -> "Example 01"
    author     -> "Tenchi (tenchi@team2xh.net)"
    date       -> "08.06.2014"
    notes      -> "Sample CRT scene in TRC language"
    gamma      -> 1.0
    background -> rgb(1.0, 1.0, 1.0)
    camera     -> frontCam
    lights     -> [redLight, blueLight]
}

--Scene-----------------------------------------------------

Scene {
    -- Anonymous entity
    Box {
        corner1 -> vec3(-0.2, 0.0, -0.2)
        corner2 -> vec3(0.2, 0.4, 0.2)
        color   -> rgb(0.5, 0.5, 0.5)
    }
    -- Saved entity
    box1
    -- Saved entity with modifier
    box1 <scale 3.0>
    -- Inline CSG difference
    box3 ^ box1 - sphere1 <scale vec3(1.0, 1.0, 2.0)>
    -- Multiple modifiers
    tub <scale 2.0, translate vec3(1.0, 0.0, 1.0)>
    -- Block CSG
    Intersection {
        box1
        tub
        -- ...
        sphere1
    }
    -- Macro call
    myMacro()
}
