l = PointLight {
    origin -> vec3(1.0, 2.0, -1.0)
    color -> rgb(0.7, 0.7, 0.7)
    falloff -> 70.0
}

cam = Camera {
    position -> vec3(0.5, 0.5, -0.3)
    pointing -> vec3(0.0, 0.5, 1.0)
    fov -> 90.0
}

Settings {
    title      -> "Example 02"
    author     -> "Tenchi (tenchi@team2xh.net)"
    date       -> "24.06.2015"
    notes      -> "Mirror room"
    lights     -> [l]
    camera     -> cam
    recursiondepth -> 10
}

mirror = Material {
    color -> rgb(1.0, 1.0, 1.0)
    reflectivity -> 0.9
}

ground = Plane {
    normal -> vec3(0.0, 1.0, 0.0)
    position -> vec3(0.0, -0.5, 0.0)
    material -> Material { color -> rgb(0.5, 0.5, 0.5) }
}
ceiling = Plane {
    normal -> vec3(0.0, -1.0, 0.0)
    position -> vec3(0.0, 2.5, 0.0)
    material -> Material { color -> rgb(0.0, 0.5, 0.0) }
}

wallBack = Plane {
    normal -> vec3(0.0, 0.0, -1.0)
    position -> vec3(0.0, 0.0, 3.0)
    material -> mirror
}
wallFront = Plane {
    normal -> vec3(0.0, 0.0, 1.0)
    position -> vec3(0.0, 0.0, -1.1)
    material -> mirror
}
wallRight = Plane {
    normal -> vec3(-1.0, 0.0, 0.0)
    position -> vec3(1.7, 0.0, 0.0)
    material -> Material { color -> rgb(0.5, 0.0, 0.0) }
}
wallLeft = Plane {
    normal -> vec3(1.0, 0.0, 0.0)
    position -> vec3(-1.7, 0.0, 0.0)
    material -> Material { color -> rgb(0.0, 0.0, 0.5) }
}

sph = Sphere {
    center -> vec3(-1.0, 0.0, 1.0)
    radius -> 0.5
    material -> Material {
        color -> rgb(0.5, 0.5, 0.5)
        reflectivity -> 0.5
    }
}

Scene {
    sph
    ground
    ceiling
    wallBack
    wallFront
    wallRight
    wallLeft
}
